{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules": {
        "no-console": "off",
        "no-param-reassign": 0,
        "import/extensions": 0,
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": true
            }
        ],
        "prettier/prettier": [
            "error",
            { "singleQuote": true, "semi": true, "parser": "flow" }
        ],
        "indent": ["error", 4, { "SwitchCase": 1 }],
        "no-tabs": ["error", { "allowIndentationTabs": true }],
        "max-len": [
            "error",
            {
                "code": 90,
                "tabWidth": 4,
                "ignoreUrls": true
            }
        ]
    }
}
